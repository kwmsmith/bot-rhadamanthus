CXX := /opt/local/bin/g++-mp-4.7

BUILD := BUILD

CXX11_FLAGS := -std=c++11

CXXFLAGS := $(CXX11_FLAGS) -Wno-narrowing -O3 -Wall \
		   -pedantic -Wno-format -Wno-long-long --coverage
LDFLAGS := $(CXX11_FLAGS) --coverage
